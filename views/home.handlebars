<ul>
    {{#each posts as |post|}}
        <a href="/post/{{post.id}}">
            <li class="post">
                <section>
                    <h2 class="title">{{post.title}}</h2>
                    <aside>
                        <p>{{post.User.name}}</p>
                        <p class="date">{{post.createdAt}}</p>
                    </aside>
                </section>                
                <p class="body">{{post.body}}</p>
            </li>
        </a>
    {{/each}}
</ul>
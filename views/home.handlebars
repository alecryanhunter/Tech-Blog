<ul>
    {{#each posts as |post|}}
        <a href="/post/{{post.id}}">
            <li>
                <section>
                    <h2>{{post.title}}</h2>
                    <section>
                        <p>{{post.User.name}}</p>
                        <p>{{post.createdAt}}</p>
                    </section>
                </section>                
                <p>{{post.body}}</p>
            </li>
        </a>
    {{/each}}
</ul>
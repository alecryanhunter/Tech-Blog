{{!-- For adding your own blog posts --}}
<ul>
    {{#each posts as |post|}}
        <a href="/post/{{post.id}}">
            <li class="post">
                <section>
                    <h2 class="title">{{post.title}}</h2>
                    <aside>
                        <p>{{post.User.name}}</p>
                        <p class="date">{{post.createdAt}}</p>
                    </aside>
                </section>                
                <p class="body">{{post.body}}</p>
            </li>
        </a>
        {{!-- <button id="post-edit">Edit</button>
        <button id="post-delete">Delete</button> --}}
    {{/each}}
</ul>

{{!-- Form for adding new posts --}}
<form id="new-post">
    <input type="text" placeholder="Post Title">
    <textarea name="" id="" cols="30" rows="5" placeholder="Post Body"></textarea>
    <button type="submit">Add Post</button>
</form>

<script src="/js/dashboard.js"></script>
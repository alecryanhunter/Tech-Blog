{{!-- For adding your own blog posts --}}
<ul>
    {{#each posts as |post|}}
        <a href="/post/{{post.id}}">
            <li>
                <section>
                    <h2>{{post.title}}</h2>
                    <p>{{post.User.name}}</p>
                </section>                
                <p>{{post.body}}</p>
            </li>
        </a>
    {{/each}}
</ul>

{{!-- Form for adding new posts --}}
<form action="">
    <input type="text">
    <textarea name="" id="" cols="30" rows="5"></textarea>
    <button type="submit">Add Post</button>
</form>